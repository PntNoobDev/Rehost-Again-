<sap:ActivityDesigner x:Class="Rehost_Again_.ReadPdfActivityDesigner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      
                       xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Height="245">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Read PDF Activity Designer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="158,36,0,0" Background="White" Height="36" Width="186" Grid.ColumnSpan="2"/>
        <Button Content="Select PDF File" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,31,0,0" Width="120" Click="SelectPdfFile_Click" Height="46"/>
        <TextBox x:Name="PdfFilePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,82,0,0" Width="380" Height="41" IsReadOnly="True" Grid.ColumnSpan="2"/>
    </Grid>
</sap:ActivityDesigner>
